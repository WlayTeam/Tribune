<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<package name="default" namespace="/" extends="struts-default">
	
		<!-- default action for couldn't find correct page -->
		<default-action-ref name="notFound" />
		
		<!-- gobal result page -->
		<global-results>
			<result>/indexs.jsp</result>
		</global-results>

		<!-- the action of index -->
		<action name="index" class="com.wlayteam.controller.IndexAction"
			method="indexAction">
			<result name="success">/index.jsp</result>
		</action>

		<!-- the action of navigation's All Articles -->
		<action name="allArticle" class="com.wlayteam.controller.IndexAction"
			method="displayArticle">
			<result name="success">/right-display.jsp</result>
		</action>

		<!-- the action of all notfound page -->
		<action name="notFound" class="com.wlayteam.controller.IndexAction">
			<result name="success">/404.jsp</result>
		</action>


	</package>

</struts>